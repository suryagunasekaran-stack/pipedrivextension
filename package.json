  "description": "Pipedrive OAuth 2.0 handshake example",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --testPathPattern=__tests__/.*\\.test\\.js --testPathIgnorePatterns=integration",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --testPathPattern=integration/.*\\.test\\.js",
    "test:reset": "NODE_ENV=test node scripts/testCleanup.js reset",
    "test:generate": "NODE_ENV=test node scripts/testCleanup.js generate",
    "test:validate": "NODE_ENV=test node scripts/testCleanup.js validate",
    "test:stats": "NODE_ENV=test node scripts/testCleanup.js stats"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongodb": "^6.16.0",
    "pino": "^9.7.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@shelf/jest-mongodb": "^5.2.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "msw": "^2.9.0",
    "nock": "^14.0.5",
    "supertest": "^7.1.1"
  }
