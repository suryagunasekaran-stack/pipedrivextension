{
  "name": "pipedrive-oauth-example",
  "version": "1.0.0",
  "description": "Pipedrive OAuth 2.0 handshake example",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --testPathPattern=__tests__/.*\\.test\\.js --testPathIgnorePatterns=integration",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --testPathPattern=integration/.*\\.test\\.js",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --config=e2e/jest.config.js --runInBand",
    "test:e2e:basic": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --config=e2e/jest.config.js --runInBand tests/basic-deals.test.js",
    "test:e2e:products": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --config=e2e/jest.config.js --runInBand tests/products-deals.test.js",
    "test:e2e:full": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --config=e2e/jest.config.js --runInBand tests/simple-deal-test.js",
    "test:e2e:xero": "NODE_OPTIONS='--experimental-vm-modules' NODE_ENV=test jest --config=e2e/jest.config.js --runInBand tests/xero-integration.test.js",
    "test:e2e:setup": "node e2e/setup/auth-setup.js",
    "test:e2e:cleanup": "node e2e/scripts/cleanup-deals.js",
    "test:reset": "NODE_ENV=test node scripts/testCleanup.js reset",
    "test:generate": "NODE_ENV=test node scripts/testCleanup.js generate",
    "test:validate": "NODE_ENV=test node scripts/testCleanup.js validate",
    "test:stats": "NODE_ENV=test node scripts/testCleanup.js stats",
    "migrate-tokens": "node scripts/migrateTokens.js"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.3",
    "mongodb": "^6.16.0",
    "multer": "^2.0.1",
    "pino": "^9.7.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@shelf/jest-mongodb": "^5.2.2",
    "inquirer": "^10.1.5",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "msw": "^2.9.0",
    "nock": "^14.0.5",
    "open": "^10.1.0",
    "supertest": "^7.1.1"
  }
}
